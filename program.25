#include <iostream>
using namespace std;
int main() {
    float a,b,c;
    cout<< "Enter three sides of a triangle: ";
    cin>>a>>b>>c;
    float s = (a + b + c) / 2;
    float area = sqrt(s * (s - a) * (s - b) * (s - c));
    cout<< "Area of the triangle is: " << area << endl;
    return 0;
}
